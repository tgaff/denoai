<%= turbo_frame_tag 'data_exports',target: '_top' do %>
  <div class="flex flex-col basis-4 justify-between items-start ">
    <h1 class="font-bold text-4xl block py-3">JSON downloads</h1>
<%
=begin%>
     
    <%= form_with url: download_json_exports_path, method: :get, target: '_top' do |f| %>      
      <%= f.label :library_id, "Select a Library", class: "block px-5 text-sm font-medium text-gray-700" %>
      <%= f.select :library_id, options_from_collection_for_select(@libraries, "id", "name"), { id: "library_select" }, class: "rounded-md my-4 py-3 px-5 text-blue-600 block font-medium min-w-80" %>
    
      <%= f.submit "View", class: "rounded-lg my-4 py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %> 
<%
=end%>

    <%= label_tag :library_id, "Select a Library", class: "block px-5 text-sm font-medium text-gray-700" %>
    <%= select_tag :library_id, 
                   options_from_collection_for_select(@libraries, "id", "name"), 
                   id: "library_select", 
                   class: "rounded-md my-4 py-3 px-5 text-blue-600 block font-medium min-w-80",
                   data: { 
                    controller: 'select-fetch', 
                    turbo_frame: "library_info",
                    action: "change->library-select#change",
                    frameId: "library_info",
                    url: "/libraries"
                  } 
    %>

    <%= turbo_frame_tag :show_download %>
  </div>
<% end %>