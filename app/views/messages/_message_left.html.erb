<div class="chat-message">
  <div class="flex items-end">
    <div class="flex flex-col space-y-2 text-xs max-w-[1/2] mx-2 order-2 items-start">
      <div>
        <span class="px-4 py-2 rounded-lg inline-block rounded-bl-none bg-gray-300 text-gray-700">
          <%= simple_format auto_link(text, html: { :target => '_blank', class: 'text-blue-500 underline' }) %>
        </span>
      </div>
    </div>

    <%= heroicon 'user-circle', variant: :mini, options: { class:'h-6 w-6 order-1 text-gray-400' } %>
  </div>
</div>